# Normalize EOL for all files that Git considers text files.
# Except for bat files, which are Windows only files.
*           text=auto eol=lf
*.bat       eol=crlf

# LFS binary files.
# - Godot
*.stex      filter=lfs diff=lfs merge=lfs -text
*.scn       filter=lfs diff=lfs merge=lfs -text
*.res       filter=lfs diff=lfs merge=lfs -text
*.pck       filter=lfs diff=lfs merge=lfs -text
*.tpz       filter=lfs diff=lfs merge=lfs -text
# - Binary
*.bin       filter=lfs diff=lfs merge=lfs -text
*.dat       filter=lfs diff=lfs merge=lfs -text
*.bytes     filter=lfs diff=lfs merge=lfs -text
# - Icons
*.icns      filter=lfs diff=lfs merge=lfs -text
*.ico       filter=lfs diff=lfs merge=lfs -text
# - Images
*.bmp       filter=lfs diff=lfs merge=lfs -text
*.dds       filter=lfs diff=lfs merge=lfs -text
*.exr       filter=lfs diff=lfs merge=lfs -text
*.hdr       filter=lfs diff=lfs merge=lfs -text
*.jpg       filter=lfs diff=lfs merge=lfs -text
*.jpeg      filter=lfs diff=lfs merge=lfs -text
*.png       filter=lfs diff=lfs merge=lfs -text
*.tga       filter=lfs diff=lfs merge=lfs -text
*.webp      filter=lfs diff=lfs merge=lfs -text
# - Audio
*.wav       filter=lfs diff=lfs merge=lfs -text
*.ogg       filter=lfs diff=lfs merge=lfs -text
*.mp3       filter=lfs diff=lfs merge=lfs -text
# - Video
*.webm      filter=lfs diff=lfs merge=lfs -text
*.ogv       filter=lfs diff=lfs merge=lfs -text
# - 3D
*.gltf      filter=lfs diff=lfs merge=lfs -text
*.glb       filter=lfs diff=lfs merge=lfs -text
*.collada   filter=lfs diff=lfs merge=lfs -text
*.dae       filter=lfs diff=lfs merge=lfs -text
*.obj       filter=lfs diff=lfs merge=lfs -text
*.mtl       filter=lfs diff=lfs merge=lfs -text
*.fbx       filter=lfs diff=lfs merge=lfs -text
# - Fonts
*.fnt       filter=lfs diff=lfs merge=lfs -text
*.ttf       filter=lfs diff=lfs merge=lfs -text
*.otf       filter=lfs diff=lfs merge=lfs -text
*.woff      filter=lfs diff=lfs merge=lfs -text
*.woff2     filter=lfs diff=lfs merge=lfs -text
# - Executables/Libraries
*.a         filter=lfs diff=lfs merge=lfs -text
*.so        filter=lfs diff=lfs merge=lfs -text
*.dmg       filter=lfs diff=lfs merge=lfs -text
*.exe       filter=lfs diff=lfs merge=lfs -text
*.dll       filter=lfs diff=lfs merge=lfs -text
*.pdb       filter=lfs diff=lfs merge=lfs -text
*.jar       filter=lfs diff=lfs merge=lfs -text
# - Archives
*.7z        filter=lfs diff=lfs merge=lfs -text
*.gz        filter=lfs diff=lfs merge=lfs -text
*.tar       filter=lfs diff=lfs merge=lfs -text
*.zip       filter=lfs diff=lfs merge=lfs -text

# Ignore some files when exporting source archive to a ZIP.
.github         export-ignore
.gitattributes  export-ignore
.gitignore      export-ignore
